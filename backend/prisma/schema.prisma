generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma-client"  // Specify a custom output path
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SensorData {
  id        Int      @id @default(autoincrement())
  temperature Float
  humidity  Float
  recordedAt DateTime @default(now())
}

model TemperaturePrediction {
  id        Int      @id @default(autoincrement())
  temperature Float
  predictedFor DateTime
  createdAt DateTime @default(now())
}